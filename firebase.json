{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "./dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/blog",
        "destination": "https://medium.com/effai-me",
        "type": 301
      },
      "ignore": [
        "firebase.json",
        "calculations.xlsx",
        "**/.*",
        "**/node_modules/**",
        "**/src/**"
      ]
    }
  }